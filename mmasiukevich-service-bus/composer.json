{
  "name": "mmasiukevich/service-bus-skeleton",
  "description": "PHP Service Bus skeleton",
  "type": "project",
  "license": "MIT",
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.2",
    "ext-json": "*",
    "mmasiukevich/service-bus": "dev-3.0-refactoring",
    "php-service-bus/module-phpinnacle-transport": "^v3.0",
    "php-service-bus/module-storage-sql": "^v3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^7",
    "vimeo/psalm": "^3"
  },
  "config": {
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    },
    "files": [
      "app/AppExtension.php",
      "app/PostgreSQLSchemaBuilder.php",
      "tools/DemoPublisher.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    },
    "files": [
      "app/AppExtension.php",
      "app/PostgreSQLSchemaBuilder.php",
      "tools/DemoPublisher.php"
    ]
  },
  "scripts": {
    "psalm": "./vendor/bin/psalm --config=psalm.xml",
    "phpunit": "phpunit --configuration phpunit.xml --verbose",
    "coverage": "phpunit --configuration phpunit.xml --coverage-html ./coverage --verbose",
    "test": [
      "@phpunit"
    ]
  }
}
